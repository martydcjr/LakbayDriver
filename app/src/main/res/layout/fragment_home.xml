<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp_pc.lakbaydriver.HomeFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/switch1"
            tools:context="com.example.hp_pc.lakbayclient.MapsActivity" />

        <Switch
            android:id="@+id/workingSwitch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="10dp"
            android:background="#80000000"
            android:trackTint="@android:color/white"
            android:textOff="Offline"
            android:textOn="Online"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:text="OFFLINE"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/workingSwitch"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:background="@drawable/white_circle"
            android:elevation="10dp"
            android:id="@+id/ic_gps"
            android:src="@drawable/ic_gps"/>


        <RelativeLayout
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/white_box"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/default_user" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/userImage"
                android:hint="Name"
                android:paddingTop="5dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_toRightOf="@+id/userImage"
                android:hint="Phone Number"
                android:paddingTop="5dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhone"
                android:layout_toRightOf="@+id/userImage"
                android:hint="Destination"
                android:paddingTop="5dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvPricetoPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDestination"
                android:layout_toRightOf="@+id/userImage"
                android:text="Price:"
                android:paddingTop="5dp"
                android:textSize="14dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userImage">

                <Button
                    android:id="@+id/rideStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/black_border"
                    android:elevation="20dp"
                    android:text="Picked customer"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pending1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/white_box"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="377dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnWaitPaid"
                android:layout_alignStart="@+id/textView6"
                android:text="Payment Method:" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:text="Price to Pay:" />

            <TextView
                android:id="@+id/tvwaitingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Waiting for Payment" />

            <TextView
                android:id="@+id/tvwaitPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:text="---------" />

            <TextView
                android:id="@+id/tvwaitmethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView"
                android:layout_centerHorizontal="true"
                android:text="---------" />

            <Button
                android:id="@+id/btnWaitPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnbackpaypal"
                android:layout_centerHorizontal="true"
                android:text="Received Payment" />

            <Button
                android:id="@+id/btnbackpaypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:text="Received Payment" />
        </RelativeLayout>


    </RelativeLayout>









</android.support.constraint.ConstraintLayout>
