                    app:ss_rightIcon="@drawable/ic_location_on"
                    app:ss_rightText="on"
                    app:ss_selectedTextSize="14sp"
                    app:ss_sliderBackgroundColor="@color/baseReleaseColor"
                    app:ss_switchColor="@color/colorAccent"
                    app:ss_animationType="line"/>

